{
  "version": 2,
  "builds": [
    {
      "src": "./server/index.js",
      "use": "@vercel/node"
    },
     {
      "src": "./frontend/build",    // path to your build folder
      "use": "@vercel/static"
    }
  ],
   "rewrites": [
    {
      "source": "/(.*)",
      "destination": "/backend/server.js"
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/"
    }
  ]
}
